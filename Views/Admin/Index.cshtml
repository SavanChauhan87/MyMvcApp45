                    <div class="col-auto">
                        <span style="font-size: 2rem;">‚ö†Ô∏è</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent Orders</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var recentOrders = ViewBag.RecentOrders as List<MyMvcApp.Models.Order> ?? new List<MyMvcApp.Models.Order>();
                            }
                            @if (recentOrders.Any())
                            {
                                @foreach (var order in recentOrders.Take(5))
                                {
                                    var statusClass = order.Status switch
                                    {
                                        MyMvcApp.Models.OrderStatus.Pending => "bg-warning",
                                        MyMvcApp.Models.OrderStatus.Confirmed => "bg-info",
                                        MyMvcApp.Models.OrderStatus.Processing => "bg-primary",
                                        MyMvcApp.Models.OrderStatus.Shipped => "bg-secondary",
                                        MyMvcApp.Models.OrderStatus.Delivered => "bg-success",
                                        MyMvcApp.Models.OrderStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("OrderDetails", new { id = order.Id })" class="text-decoration-none">
                                                #@order.Id
                                            </a>
                                        </td>
                                        <td>@order.CustomerName</td>
                                        <td>$@order.TotalAmount.ToString("F2")</td>
                                        <td><span class="badge @statusClass">@order.Status</span></td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">No recent orders found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Admin" asp-action="AddProduct" class="btn btn-primary">
                        ‚ûï Add New Product
                    </a>
                    <a asp-controller="Admin" asp-action="Products" class="btn btn-outline-primary">
                        üíä Manage Products
                    </a>
                    <a asp-controller="Admin" asp-action="Orders" class="btn btn-outline-primary">
                        üì¶ View Orders
                    </a>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-secondary">
                        üè† View Store
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">System Info</h5>
            </div>
            <div class="card-body">
                <p><strong>Version:</strong> 1.0.0</p>
                <p><strong>Last Updated:</strong> @DateTime.Now.ToString("yyyy-MM-dd")</p>
                <p><strong>Status:</strong> <span class="badge bg-success">Online</span></p>
            </div>
        </div>
    </div>
</div>
